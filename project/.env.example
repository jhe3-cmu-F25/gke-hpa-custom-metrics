# ============================================================
#  .env.example — copy this to .env and fill in real values.
#  NEVER commit .env to version control.
# ============================================================

# ── Flask ────────────────────────────────────────────────────
FLASK_PORT=5000
# Change this to a long random string in production
FLASK_SECRET_KEY=change-me-to-something-random

# ── Kafka ────────────────────────────────────────────────────
# External LoadBalancer IP of the GKE Kafka service + port
KAFKA_BROKER=<your-gke-kafka-external-ip>:9092

# Kafka topic names (must match what the backend consumes/produces)
KAFKA_TOPIC_SEARCH_REQUEST=search-request
KAFKA_TOPIC_SEARCH_RESPONSE=search-response
KAFKA_TOPIC_SEARCH_TERM_REQUEST=search-term-request
KAFKA_TOPIC_SEARCH_TERM_RESPONSE=search-term-response
KAFKA_TOPIC_TOPN_REQUEST=topn-request
KAFKA_TOPIC_TOPN_RESPONSE=topn-response

# How long (seconds) the Flask app waits for a Kafka response
KAFKA_RESPONSE_TIMEOUT=120

# ── GCP / Dataproc ───────────────────────────────────────────
GCP_PROJECT_ID=<your-gcp-project-id>
GCP_REGION=us-central1
DATAPROC_CLUSTER_NAME=<your-dataproc-cluster-name>

# GCS URI of the compiled Hadoop JAR
DATAPROC_JAR_URI=gs://<your-bucket>/inverted-index.jar

# Fully-qualified main class inside the JAR
DATAPROC_MAIN_CLASS=com.example.InvertedIndexDriver
